<br>
<h1>All our Flats (<%= @flats.length%>)</h1>
<br>
<% @flats.each do |flat| %>
  <div class="card d-inline-block" style="width: 18rem;">
      <img class="card-img-top" src="https://d6644ef6a12fcfb82f3f-5d6761b1e7eae8e264ad220502fbb6f0.ssl.cf5.rackcdn.com/a1c0b876-61e6-4ec3-8c05-ca96ca60e2d1/images/pickaflatphoto2.jpg" alt="Card image cap">
        <h5 class="card-title"><%= flat.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
        <i class="fas fa-euro-sign"></i><%= flat.price_per_night %>
        <i class="fas fa-users"></i><%= flat.number_of_guests %>
        <br>
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
  </div>
<% end %>
